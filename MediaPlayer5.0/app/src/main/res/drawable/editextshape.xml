<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--背景颜色-->
    <solid android:color="#ffffff" />

    <!--设置边距-->
    <padding
        android:left="5dp" />

    <!--控制边界线颜色和大小-->
    <stroke
        android:width="0.1dp"
        android:color="#BFBFBF" />

    <!--控制界面颜色渐变
    <gradient
            android:startColor="#ffffff"
            android:endColor="#000000"
            android:type="linear"
            android:angle="90"/>
    -->


</shape>
