<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="436dp"
    android:layout_height="232dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/alertaddlist"
    >

    <TextView
        android:id="@+id/tv_title"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/playlist_title"/>

    <!--<TextView-->
        <!--android:id="@+id/tv_message"-->
        <!--android:textSize="13sp"-->
        <!--android:textColor="#2ae8ff"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:text="@string/playlist_pmp"-->
        <!--android:paddingTop="7dp"-->
        <!--android:visibility="gone"/>-->


    <EditText
        android:id="@+id/et_add"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:hint="@string/playlist_hint"
        android:textSize="22sp"
        android:textColor="#000000"
        android:background="@drawable/editextshape"
        android:textCursorDrawable="@drawable/newplaylist_editext" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="26dp"
        android:background="#cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_quxiao"
            android:layout_width="218dp"
            android:layout_height="match_parent"
            android:textColor="#2ae8ff"
            android:textSize="26sp"
            android:background="@drawable/btn_newplaylist_quxiao_selector"
            android:text="@string/playlist_cancel"/>

        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#cccccc"/>

        <Button
            android:id="@+id/btn_queding"
            android:layout_width="218dp"
            android:layout_height="match_parent"
            android:textColor="#2ae8ff"
            android:enabled="false"
            android:textSize="26sp"
            android:background="@drawable/btn_newplaylist"
            android:text="@string/playlist_save"/>
    </LinearLayout>
</LinearLayout>
