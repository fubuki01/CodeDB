<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgrond_below"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/back_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/close_button" />


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/badkground_top">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="493dp"
                android:src="@drawable/susuanlianxi"/>

            <ImageView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="223dp"
                android:layout_marginLeft="494dp"
                android:src="@drawable/time5"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/time"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="240dp"
                android:src="@drawable/miao"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/teacher"
                android:layout_marginLeft="166dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="22dp"/>
            <ImageView
                android:id="@+id/ahead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ahead"
                android:layout_marginLeft="394dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="281dp" />
            <ImageView
                android:id="@+id/number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ahead"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="279dp"
                android:layout_marginLeft="6dp"/>
            <ImageView
                android:id="@+id/number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/number_1"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="279dp" />
            <ImageView
                android:id="@+id/number_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/number_2"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="279dp" />
            <ImageView
                android:id="@+id/number_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/number_3"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="279dp" />
            <ImageView
                android:id="@+id/number_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/number_4"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="279dp" />

            <ImageView
                android:id="@+id/begain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/begain_button"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="136dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/begain"
                android:layout_marginBottom="89dp"
                android:layout_toRightOf="@id/number_5"
                android:src="@drawable/behind"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>