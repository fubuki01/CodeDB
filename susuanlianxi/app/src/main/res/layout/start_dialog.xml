<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#22000000">

    <RelativeLayout
        android:layout_width="273dp"
        android:layout_height="339dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/startdialog_top"
            android:layout_width="260dp"
            android:layout_height="186dp"
            android:background="@drawable/myshape_top_s"
            android:layout_above="@+id/startdialog_bottom"
            android:gravity="center_horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:layout_alignParentBottom="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="今日挑战人数："
                    android:textSize="16sp"
                    android:textStyle="normal"
                    />
                <TextView
                    android:id="@+id/startdialog_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffc305"
                    android:text="115"
                    android:textSize="26sp"
                    android:textStyle="normal"
                    />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/startdialog_bottom"
            android:layout_width="260dp"
            android:layout_height="135dp"
            android:background="@drawable/myshape_bottom_sc"
            android:layout_alignParentBottom="true"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp">
                <TextView
                    android:id="@+id/startdialog_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff8d05"
                    android:text="5"
                    android:textSize="40sp"
                    android:textStyle="normal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff8d05"
                    android:text="秒"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_marginLeft="8dp"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/startdialog_startbutton"
                android:layout_width="137dp"
                android:layout_height="40dp"
                android:background="@drawable/myshape_button"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="开始挑战"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:textStyle="normal"
                android:layout_marginBottom="11dp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="158dp"
            android:layout_height="158dp"
            android:background="@drawable/boy"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="51dp"
            />

        <Button
            android:id="@+id/startdialog_closebutton"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/dialog_close"
            />

    </RelativeLayout>

</LinearLayout>